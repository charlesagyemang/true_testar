
<div class="container">
  <div class="row">
        <div class="col-xs-12 col-sm-9 col-md-6 well well-sm">
            <legend><i class="glyphicons glyphicons-display"></i>Create A test</legend>
            <div class="row">
                <%= form_for [@context, @test] do |f| %>
                  <div class="form-group col-xs-12 col-md-12">
                    <%= f.label      :title %>
                    <%= f.text_field :title, class:"form-control", placeholder:"Test Title" %>
                  </div>
                  <div class="form-group col-xs-12 col-md-12">
                    <%= f.label      :requirements %>
                    <%= f.text_area  :requirements, class:"form-control", placeholder:"Test Requirements" %>
                  </div>
                  <div class="form-group col-xs-12 col-md-12">
                    <%= f.label      :instructions %>
                    <%= f.text_area  :instructions, class:"form-control" , placeholder:"Test Instructions" %>
                  </div>
                  <div class="form-group col-xs-12 col-md-12">
                    <%= f.label      :start_date %>
                    <%= f.date_field :start_date, class:"form-control" , placeholder:"Date Should starts" %>
                  </div>
                  <div class="form-group col-xs-12 col-md-12">
                    <%= f.label      :end_date %>
                    <%= f.date_field :end_date, class:"form-control", placeholder:"Date Test should end" %>
                  </div>
                  <div class="form-group col-xs-12 col-md-12">
                    <%= f.label      :review_date %>
                    <%= f.date_field :review_date, class:"form-control", placeholder:"Date for Test Review" %>
                  </div>
                  <div class="form-group col-xs-12 col-md-12">
                  <%= f.submit class: "btn btn-primary btn-danger" %>
                 </div>
                <% end %>
            </div>
        </div>
    </div>
</div>
