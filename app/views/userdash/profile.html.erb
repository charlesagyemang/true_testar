<br /><br />

<%= render 'sidebar' %>


<div class="bs-callout bs-callout-danger well_our_two">
<div class="container side">
      <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-9 col-xs-offset-0 col-sm-offset-0 col-md-offset-0 col-lg-offset-0 toppad" >
          <div class="panel panel-info">
            <div class="panel-heading">
              <div class="col-md-5  toppad  pull-right col-md-offset-3 ">
                   <%= link_to "Edit Profile", edit_user_registration_path %>
                   <%= link_to "Logout",       destroy_user_session_path, :method => :delete %>

              <h5><p class=" text-info"><%= Time.now.strftime("%Y-%m-%d %H:%M:%S")%></p></h5>
              </div>
                <h3 class="panel-title"><%=get_firstname %></h3><br />

            </div>
            <div class="panel-body">
              <div class="row">
                <div class="col-md-3 col-lg-3 " align="center"> <img alt="User Pic" src="" class="img-circle img-responsive"> </div>

                <% if current_user %>
                <div class=" col-md-9 col-lg-9 ">
                  <table class="table table-user-information">
                    <tbody>
                      <tr>
                        <td>Firstname:</td>
                        <td><%=get_firstname %></td>
                      </tr>
                      <tr>
                        <td>Lastname:</td>
                        <td><%=get_surname %></td>
                      </tr>
                      <tr>
                        <td>Date of Birth:</td>
                        <td><%=get_date_of_birth %></td>
                      </tr>
                      <tr>
                        <td>Gender:</td>
                        <td><%= get_gender %></td>
                      </tr>
                      <tr>
                        <td>Age:</td>
                        <td><%= get_age %></td>
                      </tr>
                        <tr>
                        <td>Location:</td>
                        <td><%=get_location %></td>
                      </tr>
                      <tr>
                        <td>Phone Number:</td>
                        <td><%=get_phone_number %></td>
                      </tr>
                      <tr>
                        <td>Email:</td>
                        <td><%=get_email %></td>
                      </tr>
                        <td>Mobile Money Number</td>
                        <td>
                          <%=get_mobile_money_number %>
                        </td>

                        <tr>
                          <td>Country:</td>
                          <td><%=get_nationality %></td>
                        </tr>
                          <td>Educational Backgorund</td>
                          <td><%=get_educational_background %></td>
                        </tr>
                          <tr>
                          <td>Marital Status:</td>
                          <td><%=get_marital_status%></td>
                        </tr>
                        <tr>
                          <td>Alternative Email:</td>
                          <td><%=get_alternative_email %></td>
                        </tr>
                        <tr>
                          <td>Interests:</td>
                          <td>
                            <%=get_interests %>
                          </td>
                        </tr>

                        <tr>
                          <td>Bio:</td>
                          <td>
                            <%=get_user_bio%>
                          </td>
                        </tr>


                      </tr>

                    </tbody>
                  </table>
                  <% end %>

                  <%= link_to "Edit my profile", edit_user_registration_path, class: "btn btn-primary" %>
                  <%= link_to "Back To DashBoard", userdash_index_path, class: "btn btn-primary" %>
                </div>
              </div>
            </div>
                 <div class="panel-footer">
                        <a data-original-title="Broadcast Message" data-toggle="tooltip" type="button" class="btn btn-sm btn-primary"><i class="glyphicon glyphicon-envelope"></i></a>
                        <span class="pull-right">
                            <a href="#" data-original-title="Edit this user" data-toggle="tooltip" type="button" class="btn btn-sm btn-warning"><i class="glyphicon glyphicon-edit"></i></a>
                            <a data-original-title="Remove this user" data-toggle="tooltip" type="button" class="btn btn-sm btn-danger"><i class="glyphicon glyphicon-remove"></i></a>
                        </span>
                    </div>

          </div>
        </div>
      </div>
    </div>
  </div>
