                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div>
              <% if user_signed_in? || company_signed_in? %>
                <% if user_signed_in? %>
                  <%= link_to userdash_index_path, class:"navbar-brand topnav" do %>
                     <span><img src="<%= asset_path( 'logoreal.png' ) %>" width="35px" height="25px"/></span>
                     <%= "Hey " + get_firstname + " Welcome To TrueTesta" %>
                  <% end%>
                <% elsif company_signed_in? %>
                  <%= link_to companies_profile_path, class:"navbar-brand topnav" do %>
                     <span><img src="<%= asset_path( 'logoreal.png' ) %>" width="35px" height="25px"/></span>
                     <%= "Hey " + current_company.email + " Welcome To TrueTesta" %>
                  <% end%>
                <% end %>
              <% else %>
                <%= link_to root_path, class:"navbar-brand topnav" do %>
                   <!-- <span><img src="<%= asset_path( 'logoreal.png' ) %>" width="100%" height="100%"/></span> -->
                  <b><span class="text" style="color:white">TRUE TESTAR</span></b>
                <% end%>
              <% end %>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse navbar-right" id="expand-nav">
                <ul class="nav navbar-nav navbar-left">
                    <% if user_signed_in? || testowner_signed_in? %>
                      <% if user_signed_in? %>

                         <%= link_to  "FAQ", faq_index_path, class:"navbar-brand topnav", style:"font-size:30px;color:white;"%>

                        <li>
                            <%= link_to  get_firstname , userdash_index_path,   class:"navbar-brand topnav" %>
                        </li>
                      <% elsif testowner_signed_in? %>

                         <%= link_to  "FAQ", faq_index_path, class:"navbar-brand topnav", style:"font-size:30px;color:white;" %>

                        <li>
                            <%= link_to  current_testowner.email , testowners_profile_path,   class:"navbar-brand topnav", style:"font-size:20px;color:white;" %>
                        </li>
                      <% end %>


                    <% else %>

                    <b>     <%= link_to  "FAQ", faq_index_path, class:"navbar-brand topnav text1", style:"font-size:20px;color:white;"%></b>

                      <li>
                            <div class="dropdown">

                              <li class="navbar-brand topnav dropdown-toggle" data-toggle="dropdown"> <b><span class="text1" style="color:white;">Login</span></b>
                              <span class="caret"></span></li>
                              <ul class="dropdown-menu">
                                <li><%= link_to "As Company", new_testowner_session_path  %></li>
                                <li><%= link_to "As Tester", new_user_session_path %></li>
                              </ul>
                            </div>
                      </li>


                    <% end %>
                    <!-- <li>
                        <%= link_to "Contact", contact_index_path, class:"navbar-brand topnav" %>
                    </li> -->
                </ul>
